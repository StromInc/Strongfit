@import "nib/vendor"
@import "nib/gradients"

vendor-prefixes = webkit o ms moz official
azul = #0070c8
verdeHeader = #1B5E20
azulHover = #01579B
gris = #F9F9F9

.Section-dietas
    margin-top 5em
    text-align center

.Article-dietas
    display inline-block
    background-color white
    padding 1.5em
    text-align center
    width 50%
    float left
    margin-left 1em
    box-shadow 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)

.Figure-dietas
    text-align center
    margin 2em 1em
    color white
    display inline-block
    background-color #3266AB
    padding .3rem
    border-radius 5px
    cursor move
    width 10em
    box-shadow 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)

.img-dietas
    width 90%
    height 8em

.Article-usr
    display inline-block
    background-color white
    padding 1em
    text-align center
    width 30%
    min-height 10em
    vertical-align top
    margin-right 1.5em
    float right
    box-shadow 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)

@media screen and (max-width: 767px)
    .Section-dietas
        margin-top 6em