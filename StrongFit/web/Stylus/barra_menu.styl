.Header
    background-color #1B5E20
    color white
    position fixed
    z-index 10
    right 0
    left 0
    top 0
    box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)

.Header-title
    display inline-block
    position absolute
    top 10px
    left 30px
    font-size 2em
    margin 0.3em 0 0 3em
    margin 0 auto
    display block
    a
        color white
        text-decoration none

.Header-lista
    display inline-block
    margin 0
    float right
    margin-right 3em
    margin 0
    padding 0

.Header-li
    display inline-block
    color white
    font-size 1.6em
    margin 0
    padding .8rem 0
    vertical-align bottom
    &:hover
        background black
        opacity .6
    a
        color white
        padding 1.09rem 1rem
        text-decoration none

.user-name
    font-size 1em
    padding 1.2rem 0
    vertical-align top

@media screen and (max-width: 767px)
    .Header
        text-align center

    .Header-title
        position initial
        margin 0 auto
        display block

    .Header-lista
        margin 0
        float none
        padding 0

@media screen and (max-width: 480px)
    .Header-lista
        font-size 0.9em